##### prompt #####
eval "$(starship init $(ps -p $$ -o ucomm=))"

##### functions #####
function cheat() { curl "http://cheat.sh/$1"; }

##### aliases #####
alias less='bat'
alias cat='bat --paging=never'
alias diff='delta -s'
alias ls="eza --icons --git"
alias la="eza -a --icons --git"
alias ll="eza -aahl --icons --git"
alias lt="eza -T -L 3 -a -I 'node_modules|.git|.cache' --icons"
alias lta="eza -T -a -I 'node_modules|.git|.cache' --color=always --icons | less -r"
alias vc='code' # gui code editor
alias clear='paclear -s 5 -c yellow'

{{ if (.chezmoi.kernel.osrelease | lower | contains "proot") }}

alias avnc='am start --user 0 -n com.gaurav.avnc/com.gaurav.avnc.StartupActivity && vncserver :1 &'
alias termux-gui='export DISPLAY=:0 && PULSE_SERVER=tcp:127.0.0.1 && dbus-launch --exit-with-session bspwm &'

{{ end }}

##### paths #####
export PATH="$PATH:$HOME/bin"
export PATH="$PATH:/root/bin"
export PATH="$PATH:/root/go/bin"
export PATH="$PATH:/root/.local/bin"

{{ if eq .chezmoi.os "darwin" }}

# Copy from Caveats of 'brew (re)install python3'.
export PATH="$PATH:/usr/local/bin/python3"
# installed by pip3
export PATH="$PATH:/usr/local/opt/python@3.12/libexec/bin"

{{ end }}

##### run command #####
TMOUT=900
TRAPALRM() {
MODELS=($(ls -d $HOME/Documents/models/*))
SEC=`date +%S`
I=$((SEC%$(echo ${#MODELS[@]})+1))
3d-ascii-viewer -z 120 ${MODELS[$I]}
}
